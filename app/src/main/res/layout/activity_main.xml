<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/randomText1"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/randomText2"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomText1" />

    <EditText
        android:id="@+id/firstInput"
        android:layout_width="103dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomText2" />

    <Button
        android:id="@+id/firstCheckButton"
        android:layout_width="103dp"
        android:layout_height="54dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="120dp"
        android:onClick="checkFirst"
        android:text="check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstImage"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:visibility="invisible"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstInput"
        app:srcCompat="@drawable/ve" />

    <TextView
        android:id="@+id/answerText1"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/randomText1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answerText2"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/randomText2"
        app:layout_constraintTop_toBottomOf="@+id/answerText1" />

    <EditText
        android:id="@+id/secondInput"
        android:layout_width="103dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:visibility="invisible"
        android:inputType="numberSigned"
        app:layout_constraintStart_toEndOf="@+id/firstInput"
        app:layout_constraintTop_toBottomOf="@+id/answerText2" />

    <Button
        android:id="@+id/secondCheckButton"
        android:layout_width="103dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:visibility="invisible"
        android:layout_marginBottom="120dp"
        android:onClick="checkSecond"
        android:text="check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstCheckButton"
        app:layout_constraintTop_toBottomOf="@+id/secondImage" />

    <ImageView
        android:id="@+id/secondImage"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:visibility="invisible"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/firstImage"
        app:layout_constraintTop_toBottomOf="@+id/secondInput"
        app:srcCompat="@drawable/ve" />

    <TextView
        android:id="@+id/answerText3"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:text="TextView"
        android:textSize="25dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answerText1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/randomText3"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:text="TextView"
        android:textSize="25dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answerText2"
        app:layout_constraintTop_toBottomOf="@+id/answerText3" />

    <EditText
        android:id="@+id/thirdInput"
        android:layout_width="103dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:visibility="invisible"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/secondInput"
        app:layout_constraintTop_toBottomOf="@+id/randomText3" />

    <ImageView
        android:id="@+id/thirdImage"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:visibility="invisible"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/secondImage"
        app:layout_constraintTop_toBottomOf="@+id/thirdInput"
        app:srcCompat="@drawable/ve" />

    <Button
        android:id="@+id/thirdCheckButton"
        android:layout_width="103dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="120dp"
        android:onClick="checkThird"
        android:text="check"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/secondCheckButton"
        app:layout_constraintTop_toBottomOf="@+id/thirdImage" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="new"
        android:onClick="re-start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondCheckButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
